<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AstroWeather.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SettingsPage">
    <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="Center">
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">

            <Entry
                x:Name="APIkeyInput"
                Completed="OnEntryCompleted"
                Placeholder="Enter your api key"
                TextChanged="OnEntryTextChanged"
                WidthRequest="400" />
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Get your API key: " />
                        <Span
                            Text="here"
                            TextColor="Blue"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="https://www.visualcrossing.com/weather-api" />

                            </Span.GestureRecognizers>

                        </Span>

                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button
                x:Name="locButton"
                Clicked="OnComputeClicked"
                Text="Add new localisation"
                WidthRequest="200">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.95" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver" />
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Button>


        </VerticalStackLayout>

        <ContentView
            x:Name="PopupView"
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Black"
            IsVisible="False"
            Opacity="0">
            <Border
                Padding="20"
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <VerticalStackLayout Spacing="20">
                    <Entry
                        x:Name="nameInput"
                        Placeholder="Enter your friendly name"
                        TextColor="Black"
                        WidthRequest="200" />
                    <Entry
                        x:Name="LatitudeInput"
                        Placeholder="Enter your Latitude"
                        TextColor="Black"
                        WidthRequest="200" />
                    <Entry
                        x:Name="LongitudeInput"
                        Placeholder="Enter your Longitude"
                        TextColor="Black"
                        WidthRequest="200" />
                    <Button Clicked="OnClosePopupClicked" Text="Close" />
                </VerticalStackLayout>
            </Border>
        </ContentView>
    </AbsoluteLayout>
</ContentPage>