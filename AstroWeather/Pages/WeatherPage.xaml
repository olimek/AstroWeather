<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AstroWeather.Pages.WeatherPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AstroWeather.Helpers"
    Title="WeatherPage"
    BackgroundColor="{StaticResource BackgroundColor}">
    <StackLayout>
        <CarouselView
            x:Name="weatherCarousel"
            HeightRequest="600"
            IndicatorView="indicatorView"
            IsScrollAnimated="True">
            <CarouselView.ItemTemplate>

                <DataTemplate>
                    <StackLayout>
                        <Frame
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            BorderColor="DarkGray"
                            CornerRadius="5"
                            HasShadow="True"
                            HeightRequest="200"
                            HorizontalOptions="Center">
                            <Grid Padding="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />

                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Padding="5"
                                    Text="{Binding Date, StringFormat='Date: {0:dd.MM HH:mm}'}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Padding="5"
                                    Text="{Binding moonrise, StringFormat='Moon rise: {0:dd.MM HH:mm}'}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Padding="5"
                                    Text="{Binding moonset, StringFormat='Moon set: {0:dd.MM HH:mm}'}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Padding="5"
                                    Text="{Binding nauticalstart, StringFormat='Nautical night: {0:dd.MM HH:mm}'}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Padding="5"
                                    Text="{Binding nauticalend, StringFormat='Nautical night: {0:dd.MM HH:mm}'}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Padding="5"
                                    Text="{Binding condition, StringFormat='Condition: {0} %'}" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Padding="5"
                                    Text="{Binding moonilum, StringFormat='Moon Ilum: {0} %'}" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Padding="5"
                                    Text="{Binding DayOfWeek, StringFormat='Day: {0}'}" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Padding="5"
                                    Text="{Binding astrostart, StringFormat='Astro night: {0:dd.MM HH:mm}'}" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Padding="5"
                                    Text="{Binding astroend, StringFormat='Astro night: {0:dd.MM HH:mm}'}" />

                            </Grid>
                        </Frame>
                        <Frame
                            Margin="10"
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            BorderColor="DarkGray"
                            CornerRadius="5"
                            HasShadow="True"
                            HeightRequest="400"
                            HorizontalOptions="Center">


                            <CollectionView ItemsSource="{Binding Hours}">

                                <CollectionView.Header>
                                    <Grid Padding="5" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>

                                        <Label
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalTextAlignment="Center"
                                            Text="Hour" />
                                        <Label
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalTextAlignment="Center"
                                            Text="Temp" />
                                        <Label
                                            Grid.Column="2"
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalTextAlignment="Center"
                                            Text="Humidity" />
                                        <Label
                                            Grid.Column="3"
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalTextAlignment="Center"
                                            Text="Cloud" />
                                        <Label
                                            Grid.Column="4"
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalTextAlignment="Center"
                                            Text="Dew" />
                                        <Label
                                            Grid.Column="5"
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            HorizontalTextAlignment="Center"
                                            Text="Cond." />
                                    </Grid>
                                </CollectionView.Header>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="40" />
                                            </Grid.ColumnDefinitions>

                                            <Label
                                                Grid.Column="0"
                                                FontSize="16"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding hour}" />
                                            <Label
                                                Grid.Column="1"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding temp, StringFormat='{0}Â°C'}" />
                                            <Label
                                                Grid.Column="2"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding humidity, StringFormat='{0}%'}" />
                                            <Label
                                                Grid.Column="3"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding cloudcover, StringFormat='{0}%'}" />
                                            <Label
                                                Grid.Column="4"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding riskOfDew, StringFormat='{0}%'}" />
                                            <Label
                                                Grid.Column="5"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding astroConditions, StringFormat='{0}/10'}" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView
            x:Name="indicatorView"
            Margin="15"
            HorizontalOptions="Center"
            IndicatorColor="LightGray"
            IndicatorSize="15"
            IndicatorsShape="Square"
            SelectedIndicatorColor="{DynamicResource SecondaryColor}" />
    </StackLayout>
</ContentPage>