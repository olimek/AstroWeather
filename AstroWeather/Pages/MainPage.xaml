<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AstroWeather.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <!-- Struktura główna -->
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Sekcja nagłówka -->
            <StackLayout>
                <Label Text="Current Weather"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource PrimaryTextColor}" />
                <Label Text="City, Country"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource SecondaryTextColor}" />
            </StackLayout>

            <!-- Sekcja pogody aktualnej -->
            <Border Padding="10" BackgroundColor="Gray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40,0,0,40" />
                </Border.StrokeShape>
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image Source="weather_icon.png" HeightRequest="50" VerticalOptions="Center" />

                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="00 °C"
                               x:Name="ActualTemp"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}" />
                        <Label Text="Sunny"
                               FontSize="18"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Prognoza na kolejne godziny -->
            <ListView x:Name="LocalisationListView"
           
           HorizontalOptions="FillAndExpand"
           VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Key}"
                       Detail="{Binding Value}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
